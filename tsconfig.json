{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"jsx" : "preserve",
		"jsxFactory": "h",
		"sourceMap": false,
		"target": "esnext",
		"useDefineForClassFields": false,
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": false,
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": false,
		"lib": ["esnext"],
		"types": ["jest", "node"],
	
	},
	
	"include": ["packages/*/src"]
}
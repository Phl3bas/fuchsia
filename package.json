{
  "name": "@fuchsiajs/main",
  "version": "1.0.1",
  "private": true,
  "description": "The JSX/TSX web application framework built upon express - build declarative web servers using JSX/TSX syntax",
  "author": "Sepp Wikramaratna-Clarke",
  "repository": {
    "type": "git",
    "url": "https://github.com/Phl3bas/fuchsia"
  },
  "license": "MIT",
  "workspaces": [
		"packages/**"
	],
  "scripts": {
    	"postinstall": "yarn lerna bootstrap",
		"docs": "docsify serve ./docs",
		"lerna": "lerna",
		"prepare": "husky install && lerna bootstrap",
		"commitmsg": "commitlint -e $GIT_PARAMS",
		"commit": "git cz",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"lint": "eslint --ext .ts \"*.{ts,js}\"",
		"format": "prettier --write --parser typescript \"*.{ts,js}\"",
		"link": "lerna link",
		"build": "node ./scripts/build.mjs",
		"dev": "node ./scripts/dev.mjs"
  },
  "devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-lerna-scopes": "^12.1.4",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.4.13",
		"@typescript-eslint/eslint-plugin": "^4.28.3",
		"@typescript-eslint/parser": "^4.28.3",
		"chalk": "^4.1.2",
		"commitizen": "^4.2.4",
		"docsify-cli": "^4.4.3",
		"enquirer": "^2.3.6",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"execa": "^5.1.1",
		"fs-extra": "^10.0.0",
		"git-cz": "^4.7.6",
		"husky": "^7.0.1",
		"jest": "^27.0.6",
		"lerna": "^4.0.0",
		"minimist": "^1.2.5",
		"prettier": "^2.3.2",
		"rollup": "^2.53.2",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.30.0",
		"ts-jest": "^27.0.3",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	}
}
